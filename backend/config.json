{
    "version": "1.0",
    "openwebui_timeout": 20000,
    "max_message_length": 2000,
    "max_history_entries": 50,
    "avatar_settings": {
        "default_type": "2d",
        "default_quality": "high",
        "animation_fps": 60,
        "model_path": "assets/models/"
    },
    "tts_settings": {
        "enabled": true,
        "default_voice": "de-DE",
        "rate": 1.0,
        "pitch": 1.0
    },
    "security": {
        "max_requests_per_minute": 60,
        "allowed_origins": ["http://localhost:3000"],
        "session_timeout": 3600
    },
    "logging": {
        "level": "info",
        "max_file_size": "10mb",
        "rotation": "daily"
    }
}
